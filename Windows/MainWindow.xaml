<Window x:Name="window" x:Class="CourseWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork"
        mc:Ignorable="d"
        Title="Музей" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Style="{StaticResource DefaultWindow}" Closing="Window_Closing">
    <Grid HorizontalAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled" Width="{Binding Width, ElementName=window}" Height="{Binding Height, ElementName=window}">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="ExhibitsBtn" Content="Список экспонатов" Grid.Column="0" Grid.Row="0" Click="ExhibitsBtn_Click"></Button>
        <Button x:Name="VisitorsBtn" Content="Список посетителей" Grid.Column="1" Grid.Row="0" Click="VisitorsBtn_Click"></Button>
    </Grid>
</Window>
