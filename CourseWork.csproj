<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <AssemblyName>Museum</AssemblyName>
    <ApplicationIcon>icons\museum.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="icon.png" />
    <None Remove="icons\exhibit.png" />
    <None Remove="icons\museum.png" />
    <None Remove="icons\visitor.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="icons\museum.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="8.0.5" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="icons\exhibit.png" />
    <Resource Include="icons\museum.png" />
    <Resource Include="icons\visitor.png" />
  </ItemGroup>

</Project>
