<Window x:Name="window" x:Class="CourseWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork"
        mc:Ignorable="d"
        Title="Музей" Height="450" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Window.Resources>
        <ResourceDictionary Source="Styles/MainWindowStyles.xaml"/>
    </Window.Resources>
    <Grid HorizontalAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled" Width="{Binding Width, ElementName=window}" Height="{Binding Height, ElementName=window}">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="ExhibitsBtn" Content="Список экспонатов" Grid.Column="0"></Button>
        <Button x:Name="VisitorsBtn" Content="Список посетителей" Grid.Column="1"></Button>
    </Grid>
</Window>
